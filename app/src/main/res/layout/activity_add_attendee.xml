<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uco.jlim4.jlee8.dzhang.Project_DakeZ_JaeheeL_JungsunL.AddAttendeeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text= "Attendees : "
        android:textSize="@dimen/text_size"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:id = "@+id/attendeeList"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:scrollIndicators="right" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/name"
        android:hint="name"
        android:layout_below="@id/attendeeList"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/activity_vertical_margin2"
        android:layout_margin="@dimen/activity_vertical_margin2"
        android:inputType="textCapWords|textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id = "@+id/phoneNumber"
        android:hint="phone"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/activity_vertical_margin2"
        android:layout_margin="@dimen/activity_vertical_margin2"
        android:autoText="false"
        android:inputType="number|phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber"
        android:id = "@+id/emailAddress"
        android:hint="e-mail"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/activity_vertical_margin2"
        android:layout_margin="@dimen/activity_vertical_margin2"
        android:autoText="false"
        android:inputType="textEmailAddress" />

    <Button
        android:id = "@+id/buttonClose"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailAddress"
        android:text="Close"
        android:background="@color/button_material_light" />

    <Button
        android:id = "@+id/buttonAdd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emailAddress"
        android:text="Add"
        android:background="@color/button_material_light" />

</RelativeLayout>
